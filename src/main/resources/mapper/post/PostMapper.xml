<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.vibeapp.post.PostRepository">

    <select id="findAll" resultType="Post">
        SELECT * FROM POSTS ORDER BY NO DESC
    </select>

    <select id="findByPage" resultType="Post">
        SELECT * FROM POSTS 
        ORDER BY NO DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="findByNo" resultType="Post">
        SELECT * FROM POSTS WHERE NO = #{no}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="no">
        MERGE INTO POSTS (NO, TITLE, CONTENT, VIEWS, CREATED_AT, UPDATED_AT)
        KEY (NO)
        VALUES (#{no}, #{title}, #{content}, #{views}, #{createdAt}, #{updatedAt})
    </insert>

    <delete id="deleteByNo">
        DELETE FROM POSTS WHERE NO = #{no}
    </delete>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM POSTS
    </select>

</mapper>
